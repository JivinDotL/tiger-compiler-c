let
        var i:int := 0
        var N:int := 8
        function w() =
                (while (i < N)
                     do (i := i+1; printi(i) ))
        function f() =
        (for j := 1 to N-1
              do  printi(j)
                )

	function printb() = 
	(for i := 0 to 1-N
		do (printi(i);for j := 0 to N
			do print(if i > j then "x" else "y");
			print("\n"));
	print("\n"))
in
        f();printb()
end
    
